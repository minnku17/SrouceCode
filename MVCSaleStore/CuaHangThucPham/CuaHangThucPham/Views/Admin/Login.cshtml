
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutPage2.cshtml";
}



<h3 style="color:red; text-align:center">@ViewBag.Thongbao</h3>
<table align="center">
    <h3 style="text-align:center">ĐĂNG NHẬP ADMIN</h3>
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
        <tr style="height:40px">
            <td>Tên đăng nhập: </td>
            <td>
                <input type="text" name="UserAdmin" placeholder="Username" />
                @ViewData["Loi1"]
            </td>
        </tr>
        <tr style="height:40px">
            <td align="right">Mật khẩu: </td>
            <td>
                <input type="password" name="PassAdmin" placeholder="password" />
                @ViewData["Loi2"]
            </td>
        </tr>
        <tr style="height:40px">
            <td></td>
            <td>
                <input type="submit" value="Đăng nhập" />
            </td>
        </tr>
    }
</table>